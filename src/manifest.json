{
    "manifest_version": 2,

    "name": "Wunderlist Scrollbar Embiggener",
    "description": "Makes the scrollbars thicker on wunderlist.com",
    "version": "1.3",

    "content_scripts": [
        {
            "run_at": "document_end",
            "matches": ["https://www.wunderlist.com/*", "https://static.wunderlist.com/*"],
            "js": ["content_script.js"]
        }
    ],

    "icons": {
        "48": "icon-48.png",
        "128": "icon-128.png"
    }
}